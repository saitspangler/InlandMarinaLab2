@model InlandMarinaData.Customer

@{
    ViewData["Title"] = "Register";
}

<h1>Register an account to lease a slip on the Lake!</h1>

<h4>Customer Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" class="bg-light p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-3">
                <label asp-for="FirstName" class="control-label">First Name:</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="LastName" class="control-label">Last Name:</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Phone" class="control-label">Phone Number (xxx-xxx-xxxx):</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="City" class="control-label">City:</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Username" class="control-label">Username:</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Password" class="control-label">Password:</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <input type="submit" value="Create" class="btn btn-primary text-dark" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
